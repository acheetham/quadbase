<%= form_for(@message) do |f| %>
  <br/>
  <div class="field">
    <%= f.label :subject, "Subject:" %>
    <%= f.text_field :subject %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :body, "Body:" %><br/>
    <%= f.text_area :body %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit :class => "#{submit_classes}",
                 :value => "Send" %>
  </div>
<% end %>
