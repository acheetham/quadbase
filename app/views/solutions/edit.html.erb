<%= render :partial => 'shared/mark_it_up' %>

<%= pageHeading((@solution.has_content? ? "Editing" : "New") + " Solution") %>


<%= link_to "Show the question", "#", :class=>"hidden_content", :style=>"float_right" %>
<div class="hidden_content" style="display:none">

<% @show_credit = true %>
<%= render :partial => 'questions/show', 
           :locals => {:question => @question} %>
</div>

<%= render :partial => 'solutions/form', :locals => {:solution => @solution} %>

<% content_for :javascript do %>
	<% javascript_tag do %>
		$(document).on('click', '.hidden_content', function(){
			$('.hidden_content').toggle();
		});
	<% end %>
<% end %>