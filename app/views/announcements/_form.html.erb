<%= form_for(@announcement) do |f| %>

  <div class="field">
    <p><%= f.label :subject %><br />
    <%= f.text_field :subject %></p>
  </div>
  <div class="field">
    <p><%= f.label :body %><br />
    <%= f.text_area :body %></p>
  </div>
  <div class="field">
    <p><%= f.label :force, "Send to all users regardless of preferences?" %>
    <%= f.check_box :force %></p>
  </div>
  <div class="actions">
    <p><%= f.submit :class => "#{submit_classes}" %></p>
  </div>
<% end %>
