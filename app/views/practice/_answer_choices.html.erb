<%# Clients of this partial must supply the following variables:
      question
%>

<%= form_tag practice_submit_answer_path(question), :remote => true, :method => :get, :autocomplete => "off" do %>
  <%= hidden_field_tag :list_id, @list.id unless @list.nil? %>
  <%= hidden_field_tag :part, @part unless @part.nil? %>
  <%= hidden_field_tag :seed, @seed unless @seed.nil? %>
  <%= hidden_field_tag :embed, true if @layout == 'embed' %>
  
  <ol type='none'>
  <% question.answer_choices.each_with_index do |answer_choice, ii| %>
     <div class="quad-answer_choice">
       <%= radio_button_tag :answer_choice, ii %>
       <%= label_tag "answer_choice_#{ii}", "<span class='quad-counter'>#{choice_letter(ii)})</span><li>#{answer_choice.variated_content_html}</li>".html_safe %>
     </div>
     <br clear="all"/>
     <br clear="all"/>
  <% end %>
  </ol>
  
  <center>
    <div class="actions">
      <%= submit_tag "Submit", :id => "submit_button" %>
    </div>
  </center>
<% end %>
